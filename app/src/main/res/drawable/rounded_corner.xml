<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <solid android:color="#FFA500"/> <!-- Màu bóng -->
            <padding
                android:left="0dp"
                android:top="4dp"
                android:right="0dp"
                android:bottom="0dp"/>
        </shape>
    </item>
    <!-- Main shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="30dp"/>
            <stroke android:width="30dp" android:color="@color/white"/>
        </shape>
    </item>
</layer-list>
